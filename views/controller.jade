style
 .button{
  width:200px;
  height:200px;
  background:#ddd;
  margin:5px;
  float:left;
 }
div.button#left left
div.button#right right
div.button#up up
div.button#down down
script(src="/socket.io/socket.io.js")
script
 var is_touch_device = 'ontouchstart' in document.documentElement;
 var socket = io.connect();
 
 if(is_touch_device){
  touch();
  
 }
 else{
  click();
 }
 
 function click(){
  $('#left').click(function(){
   socket.json.send({sid:'#{sid}',command:'left'});
  })
  
  $('#right').click(function(){
   socket.json.send({sid:'#{sid}',command:'right'});
  })
  
  $('#down').click(function(){
   socket.json.send({sid:'#{sid}',command:'down'});
  });
  
  $('#up').click(function(){
   socket.json.send({sid:'#{sid}',command:'up'});
  });
 }
 function touch(){
  $('#left').bind('touchstart',function(e){
   e.preventDefault();
   socket.json.send({sid:'#{sid}',command:'left'});
  });
 
  $('#right').bind('touchstart',function(e){
   e.preventDefault();
   socket.json.send({sid:'#{sid}',command:'right'});
  });
  
  $('#up').bind('touchstart',function(e){
   e.preventDefault();
   socket.json.send({sid:'#{sid}',command:'up'});
  });
  
  $('#down').bind('touchstart',function(e){
   e.preventDefault();
   socket.json.send({sid:'#{sid}',command:'down'});
  });
 }